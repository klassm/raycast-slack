{
	"$schema": "https://www.raycast.com/schemas/extension.json",
	"name": "slack",
	"title": "Slack",
	"description": "",
	"icon": "icon.png",
	"author": "klassm",
	"license": "MIT",
	"commands": [
		{
			"name": "searchSlack",
			"title": "Search Slack",
			"description": "Search Slack channels and users",
			"mode": "view"
		},
		{
			"name": "unreadSlackConversations",
			"title": "Unread Slack conversations",
			"description": "Show unread slack conversations",
			"mode": "view"
		}
	],
	"preferences": [
		{
			"name": "tokens",
			"type": "textfield",
			"title": "Slack Tokens",
			"required": true,
			"default": "",
			"description": "Slack tokens"
		},
		{
			"name": "cookie",
			"type": "textfield",
			"title": "Slack Cookie",
			"required": true,
			"default": "",
			"description": "Slack Cookie"
		}
	],
	"dependencies": {
		"@raycast/api": "^1.104.1",
		"dotenv": "^17.2.3",
		"lodash": "^4.17.21",
		"node-fetch": "^3.3.2",
		"replace-special-characters": "^1.2.7",
		"usehooks-ts": "^3.1.1"
	},
	"devDependencies": {
		"@types/lodash": "^4.17.21",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"@biomejs/biome": "^2.3.11"
	},
	"scripts": {
		"build": "ray build -e dist",
		"dev": "ray develop",
		"lint": "biome check .",
		"format": "biome check . --write --unsafe && biome format . --write",
		"postinstall": "chmod +x ./node_modules/@biomejs/cli-*/biome || true",
		"publish": "ray publish"
	}
}
